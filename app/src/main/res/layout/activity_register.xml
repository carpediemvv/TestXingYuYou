<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingyuyou.xingyuyou.activity.RegisterActivity">

    <include
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/x60"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x27"
                android:hint="请输入手机号码"
                android:inputType="phone"
                android:theme="@style/MyEditText"
                />

            <LinearLayout
                android:layout_marginBottom="@dimen/x7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x27"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_phone_code"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/x27"
                    android:layout_weight="2"
                    android:hint="请输入手机验证码"
                    android:inputType="number"
                    android:theme="@style/MyEditText"
                    />

                <Button
                    android:textSize="@dimen/x11"
                    android:textColor="@color/white"
                    android:id="@+id/bt_send_code"
                    android:layout_width="@dimen/x66"
                    android:layout_height="@dimen/x23"
                    android:background="@drawable/register_ripple_bg_button"
                    android:text="发送验证码"/>
            </LinearLayout>

            <EditText
                android:layout_marginBottom="@dimen/x5"
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x27"
                android:hint="请输入登录密码"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"
                />

            <EditText
                android:id="@+id/et_password_again"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x27"
                android:hint="重复密码"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"/>


            <Button
                android:id="@+id/bt_register_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x26"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/register_ripple_bg_button"
                android:text="注册"
                android:textSize="@dimen/x11"
                android:textColor="@color/white"
               />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
