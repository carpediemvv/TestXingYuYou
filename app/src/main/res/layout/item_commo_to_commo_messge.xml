<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/item_commo_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x10"
                android:layout_marginBottom="20px"
    >



    <TextView
        android:gravity="start"
        android:layout_marginTop="@dimen/x3"
        android:id="@+id/tv_commo2_content"
        android:layout_toRightOf="@+id/tv_user2_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="70dp"
        android:maxLines="10"
        android:layout_alignBaseline="@+id/tv_commo2_time"
        android:textSize="@dimen/x12"
        tools:text="平路的大师傅打发士大夫发射点发生发射点大师傅十分士大夫对方的soils的开发"/>

    <TextView
        android:layout_marginTop="@dimen/x3"
        android:layout_marginLeft="20px"
        android:id="@+id/tv_commo2_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#9E9E9E"
        android:layout_alignParentRight="true"
        android:layout_marginRight="71px"
        android:textSize="@dimen/x8"
        android:text="18:15"
        />


    <TextView
        android:layout_marginTop="@dimen/x3"
        android:id="@+id/tv_user2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:textSize="@dimen/x12"
        android:textColor="@color/other_pink"
        tools:text="昵称："
        android:layout_alignBaseline="@+id/tv_commo2_time"
        android:layout_alignBottom="@+id/tv_commo2_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>