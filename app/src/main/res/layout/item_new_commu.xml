<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <RelativeLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x27"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_theme_circle_item_icon"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            android:src="@drawable/ic_theme_circle_recommend"/>

        <TextView
            android:id="@+id/tv_theme_circle_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_theme_circle_item_icon"
            android:text="游戏"
            android:layout_marginLeft="@dimen/x5"
            android:textColor="#505050"
            android:textSize="@dimen/x13"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/x5"
            android:layout_below="@+id/tv_theme_circle_item_title"
            android:background="#55000000"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x100">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_commu_hot"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x86"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"/>
        <ImageView
            android:visibility="gone"
            android:src="@drawable/ic_action_hot_commu"
            android:layout_width="@dimen/x52"
            android:layout_height="@dimen/x17"/>
    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycler_view"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:layout_marginBottom="@dimen/x4"
        android:layout_marginTop="@dimen/x13"
        android:background="#f1f1f1"/>
</LinearLayout>
