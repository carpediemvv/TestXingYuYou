<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/x276"
    android:layout_height="wrap_content"
    android:background="@drawable/change_fid_li_corners"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="@dimen/x236"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x15"
        android:text="将此贴移动于"
        android:textColor="@color/black"
        android:textSize="@dimen/x14"/>

    <View
        android:layout_width="@dimen/x236"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x14"
        android:background="@color/black"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >
    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="@dimen/x236"
        android:layout_height="1px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x20"
        android:background="@color/black"/>

    <RelativeLayout
        android:layout_width="@dimen/x236"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x33"
        android:layout_marginRight="@dimen/x33"
        android:layout_marginTop="@dimen/x15"
        >

        <TextView
            android:id="@+id/tv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确定"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/x14"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x20"
            android:layout_toLeftOf="@+id/tv_ok"
            android:text="取消"
            android:textColor="@color/black"
            android:textSize="@dimen/x14"/>


    </RelativeLayout>

</LinearLayout>
