<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
<TextView
    android:autoLink="email|web"
    android:textIsSelectable="true"
    android:layout_marginLeft="10dp"
    android:id="@+id/text_vodeo_head"
    android:textSize="@dimen/x18"
    android:layout_marginTop="10dp"
    android:textColor="#000000"
    android:text="[青部]世界第一公主殿下（高糖虐狗向）"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
<LinearLayout
    android:layout_marginTop="13dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@mipmap/video_play"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/peopleNum"
        android:layout_marginLeft="10dp"
        android:textSize="30px"
        android:text="2523人"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginLeft="20dp"
        android:src="@mipmap/video_con"
        android:layout_width="15dp"
        android:layout_height="15dp" />


    <TextView
        android:id="@+id/playNum"
        android:layout_marginLeft="10dp"
        android:textSize="30px"
        android:text="252条"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

    <TextView
        android:autoLink="email|web"
        android:textIsSelectable="true"

        android:id="@+id/video_content"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/x14"
        android:layout_marginTop="10dp"
        android:textColor="#9E9E9E"
        android:text="这是一档以二次元的词汇为出发点，揭秘词汇的来源和背后产生的故事，用 两分钟轻松娱乐探访二次元咨询科普类节目。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
       android:background="#E1E1E1"
        android:layout_width="match_parent"
        android:layout_height="1px"></TextView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_post_concern"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="@dimen/x15"
            android:background="@drawable/jion_style"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/civ_user_photo"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/x10"
            android:scaleType="centerInside"
            android:src="@mipmap/icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/civ_user_photo"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x20"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    android:text="7766" />
                <ImageView
                    android:id="@+id/iv_user_medal"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x20"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/x3"
                    android:layout_toEndOf="@id/tv_user_name"
                    android:src="@drawable/ic_action_medal"/>
                <ImageView
                    android:id="@+id/iv_medal_yuan"
                    android:layout_width="@dimen/x15"
                    android:layout_height="@dimen/x15"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_action_medal_yuan"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/textview_bg"
                    android:padding="1dp"
                    android:text="UP主"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x8" />
                <ImageView
                    android:id="@+id/iv_banzhu"
                    android:layout_width="@dimen/x20"
                    android:layout_height="@dimen/x15"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x5"
                    android:src="@drawable/ic_action_banzhu"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x8"
                android:text="7天前" />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8"
        android:layout_centerVertical="true"
        android:background="@color/custom_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@color/colorControlNormal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/x5"
            android:paddingTop="@dimen/x5"
            android:src="@drawable/pinglun" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="全部评论"
            android:textColor="@color/base_text_color_light"
            android:textSize="@dimen/x12" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/custom_gray" />
</LinearLayout>