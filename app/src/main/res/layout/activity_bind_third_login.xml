<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingyuyou.xingyuyou.activity.AboutActivity">

    <include layout="@layout/toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:id="@+id/rl_bind_qq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@drawable/ripple_bg"
            >

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/ic_action_qq_login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="我的QQ号"
                android:textColor="#000000"
                android:textSize="@dimen/x12"/>

            <TextView
                android:id="@+id/tv_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:text="未绑定"
                android:textSize="@dimen/x10"/>

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/ic_action_to_right"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_gray"/>

        <RelativeLayout
            android:id="@+id/rl_bind_wb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@drawable/ripple_bg"
            >

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/ic_action_wb_login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="我的微博号"
                android:textColor="#000000"
                android:textSize="@dimen/x12"/>

            <TextView
                android:id="@+id/tv_wb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:text="未绑定"
                android:textSize="@dimen/x10"/>

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/ic_action_to_right"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_gray"/>

        <RelativeLayout
            android:id="@+id/rl_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@drawable/ripple_bg"
            >

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/ic_action_phone_login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="我的手机号"
                android:textColor="#000000"
                android:textSize="@dimen/x12"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:text="未绑定"
                android:textSize="@dimen/x10"/>

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/ic_action_to_right"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_gray"/>

        <RelativeLayout
            android:id="@+id/rl_bind_wx"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="@drawable/ripple_bg"
            >

            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x12"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/ic_action_wx_login"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="我的微信号"
                android:textColor="#000000"
                android:textSize="@dimen/x12"/>

            <TextView
                android:id="@+id/tv_wx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:text="未绑定"
                android:textSize="@dimen/x10"/>

            <ImageView
                android:layout_width="@dimen/x15"
                android:layout_height="@dimen/x15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x8"
                android:src="@drawable/ic_action_to_right"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/custom_gray"/>

    </LinearLayout>

</LinearLayout>
