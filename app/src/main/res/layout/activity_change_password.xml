<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xingyuyou.xingyuyou.activity.RegisterActivity">

    <include
        layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:layout_marginTop="@dimen/x44"
            android:orientation="vertical"
            >

            <EditText
                android:id="@+id/et_old_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x27"
                android:hint="请输入原密码"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"

                />


            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x27"
                android:hint="请输入新密码"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"
                />

            <EditText
                android:id="@+id/et_password_again"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x27"
                android:hint="请再次输入新密码"
                android:inputType="textPassword"
                android:theme="@style/MyEditText"/>


            <Button
                android:textColor="@color/white"
                android:id="@+id/bt_register_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x26"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/register_ripple_bg_button"
                android:text="提交"
                android:textSize="@dimen/x11"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
