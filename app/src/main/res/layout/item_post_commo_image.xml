<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
    >
    <RelativeLayout
        android:id="@+id/post_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:background="@color/line"
        android:id="@+id/iv_post_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:scaleType="center"
        android:src="@drawable/ic_action_add_image"/>

    <ImageView
        android:tint="@color/colorAccent"
        android:layout_margin="3dp"
        android:id="@+id/iv_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignEnd="@+id/iv_post_image"
        android:layout_alignRight="@+id/iv_post_image"
        android:layout_alignTop="@+id/iv_post_image"
        android:src="@drawable/close"/>
    </RelativeLayout>
<ImageView
    android:visibility="gone"
    android:layout_margin="5dp"
    android:id="@+id/post_aite"
    android:src="@drawable/post_aite"
    android:layout_width="110dp"
    android:scaleType="center"
    android:layout_height="110dp" />
</LinearLayout>