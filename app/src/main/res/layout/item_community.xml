<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_catagory"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:text="A"
        android:layout_marginRight="24dp"
        android:textColor="@android:color/black"
        android:textSize="14sp" />
    <View
        android:id="@+id/view_line"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8px"
        android:layout_marginRight="24dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E0E0E0" />

    <RelativeLayout
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="160px">
        <ImageView
            android:scaleType="center"
            android:layout_marginLeft="27px"
            android:layout_centerVertical="true"
            android:id="@+id/image_imageview"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:layout_toRightOf="@+id/image_imageview"
            android:layout_marginTop="10dp"
            android:id="@+id/tv_city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="小蔡"
            android:textColor="#000000"
            android:textSize="40px" />

        <TextView
            android:layout_toRightOf="@+id/image_imageview"
            android:layout_marginTop="35dp"
            android:id="@+id/tv_city_name_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30px"
            android:text="小蔡"
            android:textColor="#9E9E9E"
            android:textSize="30px" />
        <Button
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/image_choose"
            android:text="+加入"
            android:textSize="33px"
            android:focusable="false"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:background="@drawable/joincommunity"
            android:textColor="@color/other_pink"
            android:layout_marginRight="30dp"
            android:layout_width="55dp"
            android:layout_height="22dp" />
    </RelativeLayout>

</LinearLayout>