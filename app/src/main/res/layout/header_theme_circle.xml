<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x191"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x27"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:layout_marginLeft="@dimen/x8"
            android:src="@drawable/ic_theme_circle_recommend"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:layout_marginLeft="@dimen/x5"
            android:textColor="#505050"
            android:textSize="@dimen/x13"/>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/linearlayout"
        android:background="#55000000"/>

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x164"
        android:layout_below="@+id/line"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_theme_photo"
                android:layout_width="@dimen/x57"
                android:layout_height="@dimen/x57"
                android:layout_marginTop="@dimen/x15"/>

            <TextView
                android:id="@+id/tv_theme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x9"
                tools:text="gagagagaggaga"/>

            <TextView
                android:id="@+id/tv_theme_concern_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:textColor="#9E9E9E"
                android:textSize="@dimen/x9"
                tools:text="gagagagaggaga"/>

            <Button
                android:id="@+id/bt_add_theme_circle"
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/x23"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/bg_theme_circle_add"
                android:text="+加入"
                android:textSize="@dimen/x11"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/ic_theme_circle_line_bg"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_theme_photo2"
                android:layout_width="@dimen/x57"
                android:layout_height="@dimen/x57"
                android:layout_marginTop="@dimen/x15"/>

            <TextView
                android:id="@+id/tv_theme_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x9"
                tools:text="gagagagaggaga"/>

            <TextView
                android:id="@+id/tv_theme_concern_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:textColor="#9E9E9E"
                android:textSize="@dimen/x9"
                tools:text="gagagagaggaga"/>

            <Button
                android:id="@+id/bt_add_theme_circle2"
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/x23"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/bg_theme_circle_add"
                android:text="+加入"
                android:textSize="@dimen/x11"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/ic_theme_circle_line_bg"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_theme_photo3"
                android:layout_width="@dimen/x57"
                android:layout_height="@dimen/x57"
                android:layout_marginTop="@dimen/x15"/>

            <TextView
                android:id="@+id/tv_theme_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x9"
                tools:text="gagagagaggaga"/>

            <TextView
                android:id="@+id/tv_theme_concern_number3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:textColor="#9E9E9E"
                android:textSize="@dimen/x9"
                tools:text="gagagagaggaga"/>

            <Button
                android:id="@+id/bt_add_theme_circle3"
                android:layout_width="@dimen/x55"
                android:layout_height="@dimen/x23"
                android:layout_marginTop="@dimen/x10"
                android:background="@drawable/bg_theme_circle_add"
                android:text="+加入"
                android:textSize="@dimen/x11"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:layout_below="@+id/ll_header"
        android:background="#f1f1f1"/>
</RelativeLayout>
