<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_marginTop="@dimen/x5"
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x27"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_theme_circle_item_icon"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:layout_marginLeft="@dimen/x8"
            android:src="@drawable/ic_theme_circle_recommend"/>

        <TextView
            android:layout_marginLeft="@dimen/x5"
            android:layout_centerVertical="true"
            android:id="@+id/tv_theme_circle_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_theme_circle_item_icon"
            android:text="游戏"
            android:textColor="#505050"
            android:textSize="@dimen/x12"/>

    </RelativeLayout>
    <View
        android:layout_marginBottom="@dimen/x4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#55000000"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
