<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="0dp"
              android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginLeft="@dimen/x7"
            >

            <TextView
                android:id="@+id/tv_top_well"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x7"
                android:background="@drawable/button_blue_bg"
                android:paddingBottom="@dimen/x1"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:paddingTop="@dimen/x1"
                android:text="置顶"
                android:textSize="@dimen/x10"
                android:textColor="@color/blue"/>

            <TextView
                android:id="@+id/tv_post_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/x12"
                tools:text="这是标题"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_top_well"
                android:layout_toEndOf="@+id/tv_top_well"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorItemRecycle"/>
</LinearLayout>