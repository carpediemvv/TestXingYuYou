<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:id="@+id/rl_root_comm_tags"
                android:layout_height="160px"
                android:background="@color/white"
    >
              <!--  android:background="@drawable/ripple_bg"-->

    <com.xingyuyou.xingyuyou.weight.CircleImageView
        android:adjustViewBounds="true"
        android:src="@mipmap/icon"
        android:layout_marginLeft="27px"
        android:layout_centerVertical="true"
        android:id="@+id/iv_class_image"
        android:layout_width="150px"
        android:scaleType="center"
        android:layout_height="150px" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_class_image"
        android:id="@+id/tv_class_name"
        android:layout_width="wrap_content"
        android:layout_height="160px"
        android:gravity="center_vertical"
        android:paddingLeft="30px"
        android:text="CosP"
        android:textColor="#505050"
        android:textSize="14sp" />



        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/image_choose"
            android:layout_marginRight="25dp"
            android:src="@drawable/ic_notchoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    
