<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xingyuyou.xingyuyou.activity.AboutActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?colorPrimary"

            app:layout_scrollFlags="snap|scroll|exitUntilCollapsed"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_user_page_bg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x180"
                    android:background="@drawable/otherbg"
                    android:scaleType="centerCrop"
                    />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x180"
                    android:background="#88000000"
                    android:scaleType="centerCrop"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x170"
                        android:layout_marginTop="@dimen/x10"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_marginTop="@dimen/x53"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x50"
                            >
                            <RelativeLayout
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_width="@dimen/x50"
                                android:layout_height="@dimen/x50">
                                <ImageView
                                    android:id="@+id/iv_user_photo"
                                    android:layout_width="@dimen/x50"
                                    android:layout_height="@dimen/x50"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_user_defalut"/>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="@dimen/x189"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/ll_fans"
                                    android:layout_width="@dimen/x63"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="粉丝"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/x12"/>

                                    <TextView
                                        android:id="@+id/tv_fans_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="45"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/x12"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/x1"
                                    android:layout_height="@dimen/x12"
                                    android:layout_gravity="center"
                                    android:background="@color/white"/>

                                <LinearLayout
                                    android:id="@+id/ll_attention"
                                    android:layout_width="@dimen/x63"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="关注"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/x12"/>

                                    <TextView
                                        android:id="@+id/tv_attention_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="45"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/x12"/>
                                </LinearLayout>

                                <View
                                    android:layout_width="@dimen/x1"
                                    android:layout_height="@dimen/x12"
                                    android:layout_gravity="center"
                                    android:background="@color/white"/>

                                <LinearLayout
                                    android:id="@+id/ll_JN"
                                    android:layout_width="@dimen/x63"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="胶囊"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/x12"/>

                                    <TextView
                                        android:id="@+id/tv_JN_number"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="45"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/x12"/>
                                </LinearLayout>
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x50"
                            android:layout_marginTop="@dimen/x5"
                            >

                            <LinearLayout
                                android:id="@+id/ll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/user_nickname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/x20"
                                    android:text="昵称"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/x12"/>

                                <ImageView
                                    android:id="@+id/iv_user_sex"
                                    android:layout_width="@dimen/x14"
                                    android:layout_height="@dimen/x14"
                                    android:layout_marginLeft="@dimen/x5"
                                    android:src="@drawable/ic_action_women"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ll"
                                android:layout_marginLeft="@dimen/x20"
                                android:layout_marginTop="@dimen/x5"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tv_user_JN_number"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="胶囊号：7745454"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/x10"/>

                                <TextView
                                    android:id="@+id/tv_user_signatures"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/x10"
                                    tools:text="dfsffdfsfssdfsfdsfsdfssdfs"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/ll"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_marginTop="@dimen/x5"
                                android:layout_width="@dimen/x80"
                                android:layout_height="@dimen/x23"
                                >

                            </RelativeLayout>
                            <Button
                                android:id="@+id/bt_message"
                                android:layout_width="@dimen/x68"
                                android:layout_height="@dimen/x23"
                                android:layout_alignParentRight="true"
                                android:layout_below="@+id/ll"
                                android:layout_marginRight="@dimen/x20"
                                android:layout_marginTop="@dimen/x5"
                                android:background="@drawable/button_white_bg"
                                android:text="我的私信"
                                android:textColor="@color/white"
                                android:textSize="@dimen/x10"/>
                            <Button
                                android:text="99"
                                android:textSize="10sp"
                                android:layout_marginTop="@dimen/x15"
                                android:textColor="@color/white"
                                android:id="@+id/iv_message_status"
                                android:layout_width="@dimen/x12"
                                android:layout_height="@dimen/x12"
                                android:layout_marginRight="@dimen/x18"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/bg_circle_real_pink"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/rl_message"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_message"
                                android:layout_width="@dimen/x25"
                                android:layout_height="@dimen/x25"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/x5"
                                android:layout_marginTop="@dimen/x15"
                                android:src="@drawable/ic_action_message_press"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_message"
                                android:layout_centerHorizontal="true"
                                android:text="信息"
                                android:textColor="@color/black"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_post"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/iv_post"
                                android:layout_width="@dimen/x25"
                                android:layout_height="@dimen/x25"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/x5"
                                android:layout_marginTop="@dimen/x15"
                                android:src="@drawable/ic_action_post"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/iv_post"
                                android:layout_centerHorizontal="true"
                                android:text="帖子"
                                android:textColor="@color/black"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_gift"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="@dimen/x25"
                                android:layout_height="@dimen/x25"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/x5"
                                android:layout_marginTop="@dimen/x15"
                                android:src="@drawable/ic_action_gift_pac"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image3"
                                android:layout_centerHorizontal="true"
                                android:text="礼包"
                                android:textColor="@color/black"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rl_tools"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="@dimen/x25"
                                android:layout_height="@dimen/x25"
                                android:layout_centerHorizontal="true"
                                android:layout_marginBottom="@dimen/x5"
                                android:layout_marginTop="@dimen/x15"
                                android:src="@drawable/ic_action_tools"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/image4"
                                android:layout_centerHorizontal="true"
                                android:text="游戏"
                                android:textColor="@color/black"/>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#b8b8b8"/>

                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_marginLeft="@dimen/x10"
                        android:id="@+id/iv_toolbar_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x53"
                        android:src="@drawable/ic_action_back"
                        android:visibility="visible"/>
                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/toolbar_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp" />
                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="@dimen/x22"
                        android:layout_height="@dimen/x50"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x14"
                        android:src="@drawable/ic_action_share"/>

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="@dimen/x22"
                        android:layout_height="@dimen/x50"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_toLeftOf="@+id/iv_share"
                        android:src="@drawable/ic_action_setting"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>


        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.xingyuyou.xingyuyou.weight.CustomViewPager
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:layout_height="match_parent"
            >
        </com.xingyuyou.xingyuyou.weight.CustomViewPager>

    </android.support.v4.widget.NestedScrollView>

    <ImageView
        android:id="@+id/iv_qq_group"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_gravity="right|bottom"
        android:layout_margin="@dimen/x10"
        android:src="@drawable/ic_user_page_qq_group"/>
</android.support.design.widget.CoordinatorLayout>
