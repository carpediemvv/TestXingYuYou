<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp">

        <LinearLayout
            android:id="@+id/LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginTop="@dimen/x7"
                >

                <ImageView
                    android:id="@+id/civ_user_photo"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x7"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/civ_user_photo"
                    >

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="望您啊"
                            android:textColor="@color/black"
                            android:textSize="@dimen/x10"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/iv_user_medal"
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/x20"
                            android:layout_marginStart="@dimen/x3"
                            android:layout_toEndOf="@id/tv_user_name"
                            android:src="@drawable/ic_action_medal"/>
                        <TextView
                            android:id="@+id/tv_class_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:textColor="@color/black"

                            android:textSize="10sp"/>

                        <TextView
                            android:id="@+id/tv_class_name_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/tv_class_name"
                            android:text="来自分区："
                            android:textSize="10sp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <TextView
                            android:id="@+id/tv_post_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18:11"
                            android:textSize="10sp"/>

                        <LinearLayout
                            android:id="@+id/ll_root_text"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/x13"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_post_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginTop="@dimen/x5"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="这是标题"/>

            <TextView
                android:id="@+id/tv_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginTop="@dimen/x5"
                android:lines="1"
                android:text="dsfff"
                android:textSize="12sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x7"
                android:layout_marginRight="@dimen/x7"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_post_cover0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="false"
                    android:cropToPadding="false"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon"/>

                    <ImageView
                        android:id="@+id/gif_icon0"
                        android:src="@mipmap/gif_icon"
                        android:visibility="invisible"
                        android:layout_alignBottom="@+id/iv_post_cover0"
                        android:layout_alignParentRight="true"
                        android:layout_width="109px"
                        android:layout_marginBottom="10px"
                        android:layout_marginRight="10px"
                        android:layout_height="60px" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_post_cover1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon"/>


                    <ImageView
                        android:id="@+id/gif_icon1"
                        android:src="@mipmap/gif_icon"
                        android:layout_alignBottom="@+id/iv_post_cover1"
                        android:layout_alignParentRight="true"
                        android:layout_width="109px"
                        android:visibility="invisible"
                        android:layout_marginBottom="10px"
                        android:layout_marginRight="10px"
                        android:layout_height="60px" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1">
                <ImageView
                    android:id="@+id/iv_post_cover2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon"
                    />

                    <ImageView
                        android:id="@+id/gif_icon2"
                        android:src="@mipmap/gif_icon"
                        android:visibility="invisible"
                        android:layout_alignBottom="@+id/iv_post_cover2"
                        android:layout_alignParentRight="true"
                        android:layout_width="109px"
                        android:layout_marginBottom="10px"
                        android:layout_marginRight="10px"
                        android:layout_height="60px" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_collect"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_post_collect"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/shoucang"/>

                    <TextView
                        android:id="@+id/tv_collect_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_post_collect"
                        tools:text="76566"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_comm"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_post_comm"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/pinglun"
                        />

                    <TextView
                        android:id="@+id/tv_comm_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_post_comm"
                        tools:text="76566"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_jiaonang"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/iv_post_jiaonang"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_zan"/>

                    <TextView
                        android:id="@+id/tv_jiaonang_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/iv_post_jiaonang"
                        tools:text="76566"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/colorItemRecycle"/>
</LinearLayout>