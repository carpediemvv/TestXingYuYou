<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/ripple_bg"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item_onclick"
        app:cardElevation="1dp"
        app:cardCornerRadius="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/iv_sort_game_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x88"
                android:layout_centerVertical="true"
                >

                <TextView
                    android:visibility="gone"
                    android:layout_centerInParent="true"
                    android:id="@+id/tv_sort_game_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:lines="1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x18"
                    tools:text="地铁跑酷"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_sort_game_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_sort_game_name"
                    android:layout_marginTop="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    tools:text="游戏介绍"/>


                <RelativeLayout
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    >

                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/tv_game_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x8"
                        tools:text="下载量： 72662"/>

                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/tv_game_num"
                        android:id="@+id/tv_game_hot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        tools:text="热度：453345"
                        android:textSize="@dimen/x8"
                        />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/colorItemRecycle"/>
</LinearLayout>