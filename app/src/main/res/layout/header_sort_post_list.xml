<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@color/lightColorPrimary"/>

    <ImageView

        android:id="@+id/iv_class_label"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="70dp"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/tv_post_num"
        android:textColor="@color/white"
        tools:text="人数：554"
        android:layout_below="@+id/line"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/iv_class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_post_describe"
        android:textColor="@color/white"
        tools:text="帖子：554"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/tv_post_num"
        android:layout_toRightOf="@+id/iv_class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_post_content"
        android:textColor="@color/white"
        tools:text="小姐姐发福利了"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/tv_post_describe"
        android:layout_toRightOf="@+id/iv_class_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/line"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/iv_class_label"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <TextView
        android:layout_width="@dimen/x55"
        android:layout_height="@dimen/x23"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:id="@+id/tv_class_name"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/bg_theme_circle_add"
        android:text="+加入"
        android:textSize="@dimen/x11"
        android:layout_alignBottom="@+id/line"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="15dp" />

</RelativeLayout>
