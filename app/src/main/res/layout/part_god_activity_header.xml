<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:textSize="@dimen/x22"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:text="dfsfsdfsfsdfs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="1dp"
            android:layout_gravity="center"
            android:background="@drawable/textview_bg"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:textColor="@color/white"
            android:text="官方"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:gravity="end"
        android:text="18.00"
        android:layout_marginRight="@dimen/x10"
        android:textSize="@dimen/x12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_god_content"
            android:layout_margin="@dimen/x20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />
    <TextView
        android:textSize="@dimen/x14"
        android:text="dfsfsdfsfsdfs"
        android:id="@+id/tv_content"
        android:layout_margin="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x8"
        android:layout_centerVertical="true"
        android:background="@color/custom_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@color/colorControlNormal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/x5"
            android:paddingTop="@dimen/x5"
            android:src="@drawable/pinglun"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="全部评论"
            android:textColor="@color/base_text_color_light"
            android:textSize="@dimen/x12"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/custom_gray"/>
</LinearLayout>
