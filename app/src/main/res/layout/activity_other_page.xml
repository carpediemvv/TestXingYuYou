<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    >
<!--    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">-->
<!--    </android.support.v4.widget.NestedScrollView>-->

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.xingyuyou.xingyuyou.Utils.FlingBehavior">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:titleEnabled="false">
            <ImageView
                android:id="@+id/iv_other_page_bg"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:scaleType="centerCrop"
                android:background="@drawable/otherbg"
                />

            <LinearLayout
                android:id="@+id/line_back_other"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="133dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_concern_other"
                        android:background="@drawable/buttonstyle"
                        android:textColor="@color/white"
                        android:layout_marginLeft="30dp"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="已关注"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        />

                    <Button
                        android:id="@+id/button_noConcern_other"
                        android:background="@drawable/buttonstyle"
                        android:textColor="@color/white"
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="私信ta"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="30dp" />

                    <ImageView
                        android:src="@drawable/ic_user_defalut"
                        android:id="@+id/image_head_other"
                        android:layout_width="133dp"
                        android:layout_height="133dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/re_other"
                    android:layout_width="match_parent"
                    android:layout_height="225dp">

                    <TextView
                        android:textSize="16.8dp"
                        android:id="@+id/text_name_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="决胜胖子"
                        android:textColor="@color/white" />

                    <TextView
                        android:textSize="13.48dp"
                        android:id="@+id/text_number_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_name_other"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="18dp"
                        android:text="胶囊号:4999378"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/text_sign_other"
                        android:textSize="13.4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/text_number_other"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11.8dp"
                        android:text="爱生活，爱吖佳~我是签名我是签名...."
                        android:textColor="@color/white" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginTop="@dimen/x18"
                        android:layout_marginRight="@dimen/x44"
                        android:layout_marginLeft="@dimen/x44"
                        android:orientation="horizontal"
                        android:layout_below="@+id/text_sign_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            >
                            <TextView
                                android:textSize="@dimen/x10"
                                android:id="@+id/text_fans_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="粉丝"
                                android:textColor="@color/white" />

                            <TextView
                                android:gravity="center"
                                android:textSize="@dimen/x10"
                                android:id="@+id/text_fansNumber_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:layout_marginTop="@dimen/x3"
                                android:textColor="@color/white"


                                />
                        </LinearLayout>

                        <View
                            android:background="@color/white"
                            android:layout_width="3px"
                            android:layout_height="20dp"></View>
                        <LinearLayout
                            android:weightSum="3"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/x10"
                                android:id="@+id/text_concem_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注"
                                android:textColor="@color/white" />

                            <TextView
                                android:gravity="center"
                                android:textSize="@dimen/x10"
                                android:id="@+id/text_lookNumber_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="35"
                                android:layout_marginTop="@dimen/x3"
                                android:layout_centerInParent="true"
                                android:textColor="@color/white"/>
                        </LinearLayout>

                        <View
                            android:background="@color/white"
                            android:layout_width="3px"
                            android:layout_height="20dp"></View>
                        <LinearLayout
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="@dimen/x10"
                                android:id="@+id/text_capsule_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="胶囊"
                                android:textColor="@color/white" />

                            <TextView
                                android:gravity="center"
                                android:textSize="@dimen/x10"
                                android:id="@+id/text_CapsuleNumber_other"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45"
                                android:layout_marginTop="@dimen/x3"
                                android:textColor="@color/white"
                                />

                        </LinearLayout>

                    </LinearLayout>


                    <ImageView
                        android:layout_width="@dimen/x14"
                        android:layout_height="@dimen/x13"
                        android:src="@drawable/ic_action_girl"
                        android:layout_marginLeft="@dimen/x5"
                        android:layout_toRightOf="@+id/text_name_other"
                        android:layout_marginTop="18dp"
                        android:id="@+id/image_sex_other" />
                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="0dp"
                app:layout_collapseMode="pin"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_marginLeft="@dimen/x10"
                        android:id="@+id/iv_toolbar_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x53"
                        android:src="@drawable/ic_action_back"
                        android:visibility="visible"/>
                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="名字"
                        android:textSize="18sp" />
                    <ImageView
                        android:id="@+id/iv_share"
                        android:layout_width="@dimen/x22"
                        android:layout_height="@dimen/x50"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x14"
                        android:src="@drawable/ic_iction_jubao"/>

                    <ImageView
                        android:id="@+id/iv_setting"
                        android:layout_width="@dimen/x22"
                        android:layout_height="@dimen/x50"
                        android:layout_marginRight="@dimen/x10"
                        android:layout_toLeftOf="@+id/iv_share"
                        android:src="@drawable/ic_action_share"/>

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            android:background="@android:color/white"/>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager_below_activity"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</android.support.design.widget.CoordinatorLayout>
